<% include ./partials/header %>
<% blog %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%= blog.title %>" blog</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
        </div>
        <div>
            <label>Blog content</label>
            <textarea name="blog[body]" placeholder="blog post"> <%= blog.body %> </textarea>
        </div>
        <input class="ui violet basic button" type="submit" style="margin-top: 10px;">
    </form>
</div>

<% include ./partials/footer %>